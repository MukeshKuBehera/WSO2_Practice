<?xml version="1.0" encoding="UTF-8"?>
<api context="/healthcare" name="HealthCareHospitals_API" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="POST" uri-template="/categories/{category}/reserve">
        <inSequence>
            <property expression="json-eval($.hospital)" name="Hospital" scope="default" type="STRING"/>
            <datamapper config="gov:datamapper/HospitalDataMapping.dmc" inputSchema="gov:datamapper/HospitalDataMapping_inputSchema.json" inputType="XML" outputSchema="gov:datamapper/HospitalDataMapping_outputSchema.json" outputType="XML" xsltStyleSheet="gov:datamapper/HospitalDataMapping_xsltStyleSheet.xml"/>
            <switch source="get-property('Hospital')">
                <case regex="grand oak community hospital">
                    <log level="custom">
                        <property expression="fn:concat('Routing to ', get-property('Hospital'))" name="message"/>
                    </log>
                    <call>
                        <endpoint key="GrandOakEP"/>
                    </call>
                    <respond/>
                </case>
                <case regex="clemency medical center">
                    <log level="custom">
                        <property expression="fn:concat('Routing to ', get-property('Hospital'))" name="message"/>
                    </log>
                    <call>
                        <endpoint key="ClemencyMedicalEP"/>
                    </call>
                    <respond/>
                </case>
                <case regex="pine valley community hospital">
                    <log level="custom">
                        <property expression="fn:concat('Routing to ', get-property('Hospital'))" name="message"/>
                    </log>
                    <call>
                        <endpoint key="PinValleyCommunity"/>
                    </call>
                    <respond/>
                </case>
                <default>
                    <log level="custom">
                        <property expression="fn:concat('Invalid hospital - ', get-property('Hospital'))" name="FaultLog"/>
                    </log>
                    <respond/>
                </default>
            </switch>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
</api>
